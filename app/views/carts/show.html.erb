<h1>Your Cart's Products</h1>

<%= form_tag remove_multiple_from_carts_path, method: 'post' do %>
  <table>
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Remove</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_contents.each do |product_id| %>
        <tr>
          <td><%= Product.find_by(id: product_id)&.name %></td>
          <td><%= check_box_tag("select_products[]", product_id ) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>
    <%= submit_tag "Remove from Cart" %>
  </p>

<% end %>

<br>
<%= link_to 'Product Index', products_path %>
